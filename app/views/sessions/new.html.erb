<h4 class="ui center aligned medium icon header">
  <i class="circular orange  users icon"></i>
  Login/Signup  to Continue
</h4>
<div class="ui placeholder segment login-form">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: 'ui form'}, url: login_path)  do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username", required: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password", required: true %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange middle submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= form_for(:session, html: {class: 'ui form'}, url: signup_path)  do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username", required: true%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :email, "Email" %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: "Email", required: true, autocomplete:"new-password" %>
            <i class="envelope icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password", required: true %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <div class="upload-btn-wrapper">
            <button class="btn">Upload a Profile Picture</button>
            <%= f.file_field :image, class: 'file-input', required: true %>
          </div>
          <div class="image-div" style="display: none">

          </div>
        </div>
        <%= f.submit "Sign up", class: "ui orange middle submit button" %>
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
